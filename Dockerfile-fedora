                    libmms-devel \
                    fontforge-devel \
                    qt5-qtquick1-devel \
                    exiv2-devel \
                    sane-backends-devel && \
    yum install -y \ 
                    lcms2-devel \
                    hunspell-devel \
                    glui-devel \
                    qt5-qtmultimedia qt5-multimedia-devel \
                    eigen3-devel \
                    grantlee-devel \
                    qtsinglecoreapplication-devel \
                    libarchive-devel \
                    alsa-lib alsa-lib-devel \
                    openal-soft-devel libsndfile-devel \
                    gmp-devel \
                    cups-devel \
                    qca2-devel qca-ossl qca-gnupg qca-pkcs11 && \
    yum install -y \ 
                    libdmtx-devel qrencode-devel \
                    libical-devel \
                    cyrus-sasl-devel \
                    openldap-devel \
                    gpgme-devel && \
    useradd -d /home/kdedev -m kdedev && \
    mkdir /work /qt && \
    chown kdedev /work /qt

#^^ kdedev user is added. It will use UID=1000 for files created in volumes ^^

COPY kdesrc-buildrc /home/kdedev/.kdesrc-buildrc
COPY bashrc /home/kdedev/.bashrc
RUN chown kdedev /home/kdedev/.kdesrc-buildrc /home/kdedev/.bashrc
USER kdedev
ENV HOME /home/kdedev
WORKDIR /home/kdedev/
# kde anongit url alias
RUN git config --global url."git://anongit.kde.org/".insteadOf kde: && \
    git config --global url."ssh://git@git.kde.org/".pushInsteadOf kde: && \
    git clone git://anongit.kde.org/kdesrc-build.git 

VOLUME /work
VOLUME /qt

WORKDIR /home/kdedev/
ENTRYPOINT ["/bin/bash"]
